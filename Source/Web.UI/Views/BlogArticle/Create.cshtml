@model Ewk.BandWebsite.Web.Common.Models.Blog.AddBlogArticleModel

@{
    ViewBag.Title = "Create a new article";
}

<div class="detail">

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true, "Blog Article creation was unsuccessful. Please correct the errors and try again.")
        <div>
            <fieldset>
                <legend>Create Article</legend>

                <div class="editor-label">
                    @Html.LabelFor(m => m.Title)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Title)
                    @Html.ValidationMessageFor(m => m.Title)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.Content)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Content)
                    @Html.ValidationMessageFor(m => m.Content)
                </div>

                <p>
                    <input type="submit" value="Done" />
                </p>
            </fieldset>
        </div>
    }
</div>
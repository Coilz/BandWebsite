@using System.Web.Optimization
<!DOCTYPE html>
<html>
    <head>
        
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no"/>

        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
        
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="HandheldFriendly" content="true">
        <meta name="MobileOptimized" content="900">

        <link rel="apple-touch-icon" href="@Href("~/favicon.ico")" />
        <link rel="apple-touch-icon-precomposed" href="@Href("~/favicon.ico")" />

        <title>Wood - @ViewBag.Title</title>
        <link href="@Href("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/libs/css")
        @Scripts.Render("~/bundles/modernizr")
        
    </head>
    <body>
        <div class="page">
            @Html.Partial("_PageHeaderPartial")
            <section id="main">
                @RenderBody()
            </section>
            @Html.Partial("_PageFooterPartial")
        </div>
        
        @Scripts.Render("~/bundles/libs")
        <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
        @Scripts.Render("~/bundles/bandwebsite")
        @RenderSection("scripts", required: false)
    </body>
</html>
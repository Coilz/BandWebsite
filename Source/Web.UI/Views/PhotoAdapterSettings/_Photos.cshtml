@model Ewk.BandWebsite.Web.UI.Models.ItemListModel<Ewk.BandWebsite.Web.UI.Models.PhotoAdapterSettings.PhotoDetailsModel>

<div id="pictureBar">
    @if(Request.IsAuthenticated)
    {
        <span class="editLink">
            @Html.ActionLink("photo settings", "Index", "PhotoAdapterSettings")
        </span>
    }
    <div id="pictures" class="noWrap">
        @foreach (var item in Model.Items)
        {
            <a class="picture" rel="picturebar" href="@item.LargeUrl">
                <img src="@item.SmallUrl" alt="@item.Title" />
            </a>
        }
    </div>
</div>
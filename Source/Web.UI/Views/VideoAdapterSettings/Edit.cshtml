@model Ewk.BandWebsite.Web.Common.Models.VideoAdapterSettings.UpdateVideoAdapterSettingsModel

@{
    ViewBag.Title = "Edit video adapter settings";
}

<div class="detail">

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true, "Editting video adapter settings was unsuccessful. Please correct the errors and try again.")
        <div>
            <fieldset>
                <legend>Edit video adapter settings</legend>

                <div class="display-label">
                    @Html.LabelFor(m => m.FullName)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(m => m.FullName)
                </div>

                <div class="display-label">
                    @Html.LabelFor(m => m.UserName)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(m => m.UserName)
                </div>

                <div class="display-label">
                    @Html.LabelFor(m => m.UserId)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(m => m.UserId)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.SetName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.SetName)
                    @Html.ValidationMessageFor(m => m.SetName)
                </div>

                <p>
                    <input type="submit" value="Done" />
                </p>

            </fieldset>

        </div>
    }
</div>
@model Ewk.BandWebsite.Web.UI.Models.Blog.UpdateBlogArticleModel

@{
    ViewBag.Title = "Edit Article";
}

<div class="detail">

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true, "Blog Article editting was unsuccessful. Please correct the errors and try again.")
        <div>
            <fieldset>
                <legend>
                    Edit Article
                </legend>
                <div class="editor-label">
                    @Html.LabelFor(m => m.Title)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Title)
                    @Html.ValidationMessageFor(m => m.Title)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.Content)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Content)
                    @Html.ValidationMessageFor(m => m.Content)
                </div>
                
                <p>
                    <input type="submit" value="Done" />
                    <span class="editLink">
                        @Html.ActionLink("delete", "Delete", "BlogArticle", new { id = Model.Id }, null)
                    </span>
                </p>

            </fieldset>
        </div>
    }
</div>